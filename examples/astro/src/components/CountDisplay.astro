<div class="max-w-screen-sm mx-auto p-4 rounded-lg border">
  <p id="count-display"></p>
</div>

<style>
  #count-display {
    font-size: 1.5rem;
    font-weight: bold;
  }
</style>

<script>
  import { effect } from "lager/effect";
  import { createCountQuery } from "../query/count-query";

  const { data } = createCountQuery(100);

  const $countDisplay = document.getElementById(
    "count-display"
  ) as HTMLParagraphElement;

  effect(() => {
    $countDisplay.textContent = `Count: ${data.get()}`;
  });
</script>
